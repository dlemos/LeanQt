let lib_config : Config {
	.defines += [
		"QT_BUILD_GUI_LIB"
	]
}

# submod xcb

let config * : Config {
	.defines += [
		"QT_NO_IMAGEFORMATPLUGIN"
	]
	# .configs += xcb.config
}

let err : Message {
	.text = "gui module requires HAVE_IMAGE"
}

