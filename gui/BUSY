	]

	if ^HAVE_PLUGINS {
		.sources += [ 
			./qgenericplugin.h
			./qpictureformatplugin.h
		]
	}

	.defines += config.defines + ^_core_config.defines + "QT_NO_SESSIONMANAGER"
}

let moc_sources * : SourceSet {
	.configs += [ ^_core_config ^_image_config config lib_config ]
	.deps += run_moc 
} 

