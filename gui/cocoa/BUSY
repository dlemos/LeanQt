		../platformsupport/qmacmime.mm
		#../platformsupport/cglconvenience.mm
	]

	.include_dirs += [
		.
		../platformsupport
	]
	.configs += [ ^_core_config ^_image_config config ]
	.deps += [ run_moc run_rcc ]
